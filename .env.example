# AG Futures Production - Environment Variables Template
# Copy this file to .env and fill in your API keys

# NOAA Climate Data (optional - for historical weather data)
# Get your token at: https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_TOKEN=your_token_here

# USDA NASS QuickStats (optional - for crop data)
# Get your key at: https://quickstats.nass.usda.gov/api
USDA_NASS_API_KEY=your_key_here

# Email notifications (optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Trading account (optional - for position sizing)
ACCOUNT_SIZE=100000
MAX_PORTFOLIO_RISK=0.20
